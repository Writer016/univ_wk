<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/normalFragment">

    <fragment
        android:id="@+id/normalFragment"
        android:name="com.appl.fastnote.NormalFragment"
        android:label="fragment_normal"
        tools:layout="@layout/fragment_normal" >
        <action
            android:id="@+id/action_normalFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.appl.fastnote.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>